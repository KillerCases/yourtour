<!DOCTYPE html>
<html>
<head>
  <title>Yourtour</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript"> $(function () { $("#myModal").modal({show:false }); </script>
</head>
<body>
  
  <%= render "welcome/sign_in_modal" %>
  <%= render "welcome/sign_up_modal" %>
     
  <div class='container'>

    <ul class='nav nav-tabs'>

        <%= link_to welcome_index_path do %>
          <img alt="Logo" src="/assets/logo.png" height= '42' width=42/>
        <% end %>
    
        
        <% if can? :manage, @tour %>
          <li><%= link_to "Admin", welcome_admin_path %></li>
        <% end %>

        <li class='user'>
          <ul class='nav nav-pills'>
            <li role="presentation" class="dropdown">
              <% if current_user %>
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
                  Welcome, <%= "#{current_user.name}" %><%= image_tag current_user.user_image %> <span class="caret"></span>
              </a>
               
              <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Bookings", bookings_path %></li>
                    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></li>  
              </ul>
            </li> 
            <% else %>
            <%= link_to "Login", "#login", "data-toggle" => "modal", :class => 'btn btn-small' %>
              <li><%= link_to "Sign Up", new_user_registration_path%></li>
              <li><%= link_to "Sign In", new_user_session_path%></li>
              <li><%= link_to "Sign Up", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-small btn-success' %></li>
              <li><%= link_to "Sign In", "#sign_in", "data-toggle" => "modal", :class => 'btn btn-small' %></li>
            <% end%>
          </ul>
                                
      </li>
    </ul>
     


      <% if flash[:notice]%>
      <div class='alert alert-success'>
          <button type='button' class='close' data-dismiss='alert'>&times;</button>
        <%= flash[:notice]%>
        </div>
        <% elsif flash[:error]%>
      <div class='alert alert-danger'>
          <button type='button' class='close' data-dismiss='alert'>&times;</button>
        <%= flash[:error]%>
        </div>
      <% elsif flash[:alert]%>
      <div class='alert alert-info'>
          <button type='button' class='close' data-dismiss='alert'>&times;</button>
        <%= flash[:alert]%>
        </div>
      <% end %>

    <%= yield %>
  
  

   
  </div>


</body>
</html>
