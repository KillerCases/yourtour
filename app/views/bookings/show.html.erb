<p id="notice"><%= notice %></p>

<h1>Customer Booking</h1>

<p>
  <strong>Tour:</strong>
  <%= @booking.calendar.tour.name %>
</p>

<p>
  <strong>Date Time:</strong>
  <%= @booking.calendar.calendar_datetime %>
</p>

<p>
  <strong>Calendar ID:</strong>
  <%= @booking.calendar.id %>
</p>

<p>
  <strong>User Email:</strong>
  <%= @booking.user.email %>
</p>

<p>
  <strong>Price:</strong>
  <%= @booking.calendar.tour.tour_price.price_adult %>
</p>

<%= form_tag charges_path do %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          >
</script>
<% end %>

<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path %>
