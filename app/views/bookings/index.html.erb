<h1>Listing Bookings</h1>

<div class='media'>
  <div class='media-body'>
     <table class='table table-hover'>
        <thead>
          <tr>
            <th>Tour</th>
            <th>Date</th>
            <th>User Email</th>
            <th>Payment Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.calendar.tour.name %></td>
              <td><%= booking.calendar.calendar_datetime %></td>
              <td><%= booking.user.email %></td>
              <td><%= booking.status %></td>
              <td><%= link_to 'Show', booking, class: 'btn btn-mini'  %></td>
              <td><%= link_to 'Cancel', charge_path(:id => booking.id, :booking_id => booking.id), method: :delete, class: 'btn btn-mini', data: { confirm: 'Are you sure?' } %></td>
               <% if can? :manage, @booking %>
              <td><%= link_to 'Destroy', booking, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
              
            
              <% end %>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Back', :back %>
