<div class='container'>


    <div class="row">
        <div class='col-md-2'></div>
        <div class='col-md-4'>
          <%= bootstrap_form_tag url: tickets_path do |f| %>
          <%= f.text_field :full_name %>
          <%= f.text_field :email %>
          <%= f.text_field :subject %>
          <%= f.text_field :body, placeholder: "Please describe your issue" %>
          <p><%= submit_tag "Send Your Question", class: "btn btn-large btn-primary" %></p>
          <% end %>
        </div>
    </div>
  
</div>
