  <p>
    <strong>Created at:</strong>
    <%= @tour.created_at %>
  </p>

  <p>
    <strong>Meeting Point Latitude:</strong>
    <%= @tour.latitude %>
  </p>

  <p>
    <strong>Meeting Point Longitude:</strong>
    <%= @tour.longitude %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @tour.tour_price.name %>
  </p>

  <p>
    <strong>Min Customer Threshold:</strong>
    <%= @tour.min_customer_threshold %>
  </p>

  <%= link_to 'Edit', edit_tour_path(@tour) %>

<%end%>|
  
