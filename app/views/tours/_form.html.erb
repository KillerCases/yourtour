<div class='row'>

  <%= form_for @tour, html: { class: 'form-horizontal', multipart: true }  do |f| %>
    <% if @tour.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h2>

        <ul>
        <% @tour.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :created_at, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.date_select :created_at %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :short_description, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :short_description%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :long_description, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :long_description, class:'input-xxlarge'%>
      </div>
    </div>
   <div class='control-group'>
    <%= f.label :tour_guide, class: 'control-label'%><br>
    <div class = "controls">
      <%= collection_select( :tour, :tour_guide_id, TourGuide.all, :id, :name, {:multiple => false})%>
    </div>
   </div>
   <div class='control-group'>
    <%= f.label :tour_city, class: 'control-label'%><br>
    <div class = "controls">
      <%= collection_select( :tour, :tour_city_id, TourCity.all, :id, :city, {:multiple => false})%>
    </div>
  </div>
     <div class="control-group">
       <%= f.label :meeting_point_description, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :meeting_point_description%>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :address, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :address%>
      </div>
    </div>
  <div class="control-group">
        <%= f.label :latitude, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :latitude%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :longitude, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :longitude%>
      </div>
    </div>
    <div class='control-group'>
      <%= f.label :tour_price, class: 'control-label'%><br>
    <div class = "controls">
      <%= collection_select( :tour, :tour_price_id, TourPrice.all, :id, :name, {:multiple => false})%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :min_customer_threshold, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :min_customer_threshold%>
      </div>
    </div>
  <div class="field">
      <%= f.label :tour_image %>
      <%= f.file_field :tour_image %>
  </div>
    <div class="actions">
      <div class = "controls">
        <%= f.submit "Submit", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
