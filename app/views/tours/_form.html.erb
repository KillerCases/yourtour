<div class='row'>

  <%= form_for @tour, html: { class: 'form-horizontal' }  do |f| %>
    <% if @tour.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h2>

        <ul>
        <% @tour.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :created_at, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.date_select :created_at %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :short_description, class: 'control-label' %><br>
      <div class = "controls">
        <%= f.text_field :short_description %>
      </div>
    </div>
  <div class='control-group'>
    <%= f.label :tour_guide, class: 'control-label'%><br>
    <div class = "controls">
      <%= collection_select( :tour, :tour_guide_id, TourGuide.all, :id, :name, {:multiple => false})%>
    </div>
  </div>
    <div class="actions">
      <div class = "controls">
        <%= f.submit "Submit", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
