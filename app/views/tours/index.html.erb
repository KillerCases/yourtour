<h1>Listing tours</h1>

<div class='media'>
  <div class='media-body'>
    
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Created at</th>
          <th>Name</th>
          <th>Short description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tours.each do |tour| %>
          <tr>
            <td><%= tour.created_at %></td>
            <td><%= tour.name %></td>
            <td><%= tour.short_description %></td>
            <td><%= link_to 'Show', tour, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_tour_path(tour), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', tour, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Tour', new_tour_path %>
