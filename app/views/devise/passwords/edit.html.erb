<div class='container'>
  
    <div class='col-md-4'></div>
    <div class='col-md-4'>
        <h2>Change your password</h2>
      <%= bootstrap_form_for(resource, :as => resource_name, :url => edit_user_registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
            <%= f.password_field :password, autocomplete: "off", label: "New Password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirm New Password" %>
            <%= f.submit "Change my password", :class => 'btn btn-block button_pink' %>
        <% end %>
    </div>
    <div class='col-md-4'></div>
  
</div>
