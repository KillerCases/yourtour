<h1>Calendar Requests</h1>
<br>
<div class="alert alert-info">
    This page shows tours which have been requested when no dates were available
</div>
  
<div class='media'>
  <div class='media-body'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Tour Name</th>
          <th>User Email</th>
          <th>Created At</th>
          <th colspan="3"></th>
        </tr>
      </thead>

  <tbody>
    <% @calendar_requests.each do |calendar_request| %>
      <tr>
        <td><%= calendar_request.tour.name %></td>
        <td><%= calendar_request.user.email %></td>
        <td><%= calendar_request.created_at %></td>
        <td><%= link_to 'Show', calendar_request %></td>
        <td><%= link_to 'Edit', edit_calendar_request_path(calendar_request) %></td>
        <td><%= link_to 'Destroy', calendar_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>

<%= link_to 'New Calendar request', new_calendar_request_path %>
