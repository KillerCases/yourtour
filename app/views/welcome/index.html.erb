<div class="container">
  <div class="row header-panel">
     <div class="title">
        <h1>Your Local Guide</h1>
        <h2>Discover the world the way others see it</h2>
    </div>
    <div class="col-lg-12">
    </div>
  </div>
  
  <div class="row">
    <div class="span12">
    </div>
  </div>
  <div class="row search-panel">
    <div class="col-md-3">
      <h4>What interests you?</h4>
    </div>
    <div class="col-md-6 search-bar">
       <div class='pull-left range-query search-bar'>
            <%= form_tag welcome_index_path, method: :get, :class => "form-inline" do %>
              <div class='form-group'>
                <%= text_field_tag :search_location, params[:search_location], class: 'form-control', :placeholder => "Location" %>
             </div>
             <div class='form-group'>
              <%= text_field_tag :search, params[:search], class: 'form-control', :placeholder => "Interest" %>
             </div>
              <%= submit_tag 'Search', class: 'btn search-btn'%>
              <% end %>
        </div>
    </div>
    
    <div class="col-md-3">
    </div>
  </div>
  
  <div class='container-fluid'>
  
  <div class='row'>
  </div>
  
  <div class="row ">
    <% @tours.each do |tour| %>
      <div class="col-md-4 image-panel">
        <%= link_to(image_tag(tour.tour_image.url(:square)), tour_path(tour.id)) %>
        <h4><%= tour.name %></h4>
      </div>
		<% end %>
  </div>
  

</div>
</div>
