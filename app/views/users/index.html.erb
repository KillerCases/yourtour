<div class='row'>

  <h1>Users</h1>

</div>

<div class='media'>
  <div class='media-body'>
    
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Show', user, class: 'btn btn-mini' %></td>        
            <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

